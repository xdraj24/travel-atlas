NODE_ENV=production
HOST=0.0.0.0
PORT=8055
PUBLIC_URL=https://api.example.com
KEY=replace-with-random-uuid
SECRET=replace-with-long-random-secret
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=replace-me

CORS_ENABLED=true
CORS_ORIGIN=https://your-app.vercel.app
CORS_METHODS=GET,POST,PATCH,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_CREDENTIALS=true

DB_CLIENT=pg
# Preferred for Railway/managed Postgres:
# DB_CONNECTION_STRING=${{Postgres.DATABASE_URL}}
DB_CONNECTION_STRING=
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=directus
DB_USER=directus
DB_PASSWORD=replace-me
DB_SSL=false

# Railway-safe writable paths (avoid /opt/app/node_modules and /opt/app/uploads)
STORAGE_LOCAL_ROOT=/tmp/uploads
EXTENSIONS_PATH=/tmp/extensions
CACHE_PATH=/tmp

# Keep false in production unless you intentionally want to wipe and reseed.
RESET_AND_SEED_ON_BOOT=false
