{
  "kind": "collectionType",
  "collectionName": "specialists",
  "info": {
    "singularName": "specialist",
    "pluralName": "specialists",
    "displayName": "Specialist",
    "description": "Local advisors and community leaders"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "local_advisor",
        "community_leader"
      ],
      "required": true
    },
    "bio": {
      "type": "richtext"
    },
    "profileImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "country": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::country.country"
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "languages": {
      "type": "json"
    },
    "offersChat": {
      "type": "boolean",
      "default": true
    },
    "offersTrips": {
      "type": "boolean",
      "default": true
    },
    "tripPriceFrom": {
      "type": "decimal"
    },
    "whatsappLink": {
      "type": "string"
    },
    "instagramLink": {
      "type": "string"
    },
    "featuredInCountries": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::country.country",
      "mappedBy": "specialists"
    },
    "trips": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::trip.trip",
      "mappedBy": "specialist"
    }
  }
}
