{
  "kind": "collectionType",
  "collectionName": "hikes",
  "info": {
    "singularName": "hike",
    "pluralName": "hikes",
    "displayName": "Hike",
    "description": "Hikes by country and wonder"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "difficulty": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "elevationGain": {
      "type": "integer"
    },
    "distanceKm": {
      "type": "decimal"
    },
    "durationHours": {
      "type": "decimal"
    },
    "bestSeason": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "wonder": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::wonder.wonder",
      "inversedBy": "hikes"
    },
    "country": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::country.country",
      "inversedBy": "hikes",
      "required": true
    }
  }
}
