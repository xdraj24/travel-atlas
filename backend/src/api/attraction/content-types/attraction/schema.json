{
  "kind": "collectionType",
  "collectionName": "attractions",
  "info": {
    "singularName": "attraction",
    "pluralName": "attractions",
    "displayName": "Attraction",
    "description": "Travel attractions by country"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "beach",
        "viewpoint",
        "town",
        "waterfall"
      ],
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "country": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::country.country",
      "inversedBy": "attractions",
      "required": true
    }
  }
}
