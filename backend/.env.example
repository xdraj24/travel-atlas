NODE_ENV=production
HOST=0.0.0.0
PORT=8055
PUBLIC_URL=https://api.example.com
KEY=replace-with-random-uuid
SECRET=replace-with-long-random-secret

# Automatically creates the first admin user if one does not exist.
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-super-strong-password

CORS_ENABLED=true
CORS_ORIGIN=https://your-app.vercel.app
CORS_METHODS=GET,POST,PATCH,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_CREDENTIALS=true

# Directus database config
DB_CLIENT=pg
# Preferred for Railway/managed Postgres:
# DB_CONNECTION_STRING=${{Postgres.DATABASE_URL}}
DB_CONNECTION_STRING=
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=directus
DB_USER=directus
DB_PASSWORD=change-me-db-password
DB_SSL=false

# Optional: when true, startup script truncates and reseeds all domain tables.
RESET_AND_SEED_ON_BOOT=false
