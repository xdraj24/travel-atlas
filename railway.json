{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.backend",
    "watchPatterns": [
      "backend/**",
      "Dockerfile.backend",
      "railway.json"
    ]
  },
  "deploy": {
    "healthcheckPath": "/server/health",
    "restartPolicyType": "ON_FAILURE"
  }
}
